# Inverts in-place the contents of an array list.
reverse(array) {
    var start, finish, temp;
    start = 0;
    finish = size(array) - 1;
    while (start < finish) {
        temp = get(array, start);
        set(array, start, get(array, finish));
        set(array, finish, temp);
        inc start;
        dec finish;
    }
}